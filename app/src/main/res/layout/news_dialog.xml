<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/sectionTabColor"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="300dp"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            android:src="@drawable/no_image_big"
            />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cleanBlack"
            android:textSize="18dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textStyle="bold"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dialogBorder"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_twitter"
                android:layout_width="147dp"
                android:layout_gravity="center"
                android:layout_height="47dp"
                android:scaleType="fitCenter"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:background="@color/cleanWhite"
                android:src="@drawable/ic_twitter_logo_dialog"
                />
            <ImageView
                android:id="@+id/dialog_chrome"
                android:layout_width="147dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:background="@color/cleanWhite"
                android:src="@drawable/ic_chrome"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>